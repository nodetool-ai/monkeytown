# syntax=docker/dockerfile:1.4

# ============================================
# Monkeytown Web Application
# ============================================
# Multi-stage build for optimized production image

# ----------------------------------------------------------------
# Stage 1: Dependencies
# ----------------------------------------------------------------
FROM node:20-alpine AS deps
RUN apk add --no-cache libc6-compat
WORKDIR /app

COPY web/package.json web/package-lock.json* ./
RUN npm ci --only=production

# ----------------------------------------------------------------
# Stage 2: Build
# ----------------------------------------------------------------
FROM node:20-alpine AS builder
WORKDIR /app

COPY web/package.json web/package-lock.json* ./
RUN npm ci

COPY . .
WORKDIR /app/web
RUN npm run build

# ----------------------------------------------------------------
# Stage 3: Production
# ----------------------------------------------------------------
FROM node:20-alpine AS production
WORKDIR /app

ENV NODE_ENV=production
ENV PORT=3000

# Create non-root user for security
RUN addgroup -g 1001 -S nodejs
RUN adduser -S monkeytown -u 1001

# Copy built assets
COPY --from=builder /app/web/dist ./dist
COPY --from=builder /app/web/package.json ./
COPY --from=deps /app/node_modules ./node_modules

# Copy server for potential SSR or API routes
COPY --from=builder /app/server ./server

# Change ownership
RUN chown -R monkeytown:nodejs /app
USER monkeytown

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
  CMD wget --no-verbose --tries=1 --spider http://localhost:3000/health || exit 1

EXPOSE 3000

CMD ["node", "dist"]
