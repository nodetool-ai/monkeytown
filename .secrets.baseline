{
  "version": "1.0.0",
  "date": "2026-01-17",
  "description": "Baseline for secret scanning in Monkeytown repository",
  "settings": {
    "disable_checks": {
      "no_url_credentials": false,
      "no_ip_address": false
    },
    "allow_list_patterns": [
      "^localhost$",
      "^127\\.0\\.0\\.1$",
      "^::1$"
    ]
  },
  "entries": [
    {
      "name": "Allowed Development Placeholders",
      "pattern": "(dev|development|test|staging|local)(_[a-zA-Z0-9_]+)?_(api_key|token|secret|password)",
      "type": "pattern",
      "status": "allowed",
      "note": "Development placeholders that must be replaced before deployment"
    },
    {
      "name": "Generic API Key Pattern",
      "pattern": "(api_key|apikey|api-secret|api_secret)[\\s=:'\"]+[a-zA-Z0-9_\\-]{20,}",
      "type": "pattern",
      "status": "blocked",
      "note": "Generic API key pattern - will match actual keys"
    },
    {
      "name": "OpenAI API Key",
      "pattern": "sk-[a-zA-Z0-9]{48}",
      "type": "regex",
      "status": "blocked",
      "note": "OpenAI API key - must use environment variable"
    },
    {
      "name": "Anthropic API Key",
      "pattern": "sk-ant-api03-[a-zA-Z0-9\\-]{43,}",
      "type": "regex",
      "status": "blocked",
      "note": "Anthropic API key - must use environment variable"
    },
    {
      "name": "GitHub Token",
      "pattern": "(ghp|gho|ghu|ghs|ghr)_[a-zA-Z0-9_]{36}",
      "type": "regex",
      "status": "blocked",
      "note": "GitHub personal access token - must use GitHub Actions secrets"
    },
    {
      "name": "GitHub App Token",
      "pattern": "github_pat_[a-zA-Z0-9_]{22,}",
      "type": "regex",
      "status": "blocked",
      "note": "GitHub App token - must use GitHub Actions secrets"
    },
    {
      "name": "AWS Access Key",
      "pattern": "AKIA[0-9A-Z]{16}",
      "type": "regex",
      "status": "blocked",
      "note": "AWS access key - must use IAM roles or temporary credentials"
    },
    {
      "name": "AWS Secret Key",
      "pattern": "[0-9a-zA-Z/+]{40}",
      "type": "regex",
      "status": "blocked",
      "note": "AWS secret key - must use IAM roles or temporary credentials"
    },
    {
      "name": "JWT Token",
      "pattern": "eyJ[a-zA-Z0-9_-]*\\.eyJ[a-zA-Z0-9_-]*\\.[a-zA-Z0-9_-]*",
      "type": "regex",
      "status": "blocked",
      "note": "JWT token - should be obtained programmatically"
    },
    {
      "name": "Private Key",
      "pattern": "-----BEGIN (RSA |EC |DSA |OPENSSH )?PRIVATE KEY-----",
      "type": "regex",
      "status": "blocked",
      "note": "Private key - must use secure key management"
    },
    {
      "name": "Database Connection String",
      "pattern": "(mongodb(\\+srv)?|postgres|postgresql|mysql|mssql)://[^:]+:[^@]+@",
      "type": "regex",
      "status": "blocked",
      "note": "Database connection string with credentials"
    },
    {
      "name": "Slack Token",
      "pattern": "xox[baprs]-([0-9a-zA-Z]{10,48})",
      "type": "regex",
      "status": "blocked",
      "note": "Slack API token - must use environment variable"
    },
    {
      "name": "Stripe Key",
      "pattern": "(sk|pk)_(test|live)_[0-9a-zA-Z]{24,}",
      "type": "regex",
      "status": "blocked",
      "note": "Stripe API key - must use environment variable"
    },
    {
      "name": "SendGrid Key",
      "pattern": "SG\\.[a-zA-Z0-9_-]{22}\\.[a-zA-Z0-9_-]{43}",
      "type": "regex",
      "status": "blocked",
      "note": "SendGrid API key - must use environment variable"
    },
    {
      "name": "Google API Key",
      "pattern": "AIza[0-9A-Za-z\\-_]{35}",
      "type": "regex",
      "status": "blocked",
      "note": "Google API key - must use environment variable"
    }
  ],
  "exclude_patterns": [
    "**/*.example",
    "**/*.template",
    "**/*.sample",
    "**/test/**",
    "**/tests/**",
    "**/*_test.*",
    "**/*.min.js",
    "**/*.min.css",
    "**/node_modules/**",
    "**/.git/**",
    "**/.next/**",
    "**/coverage/**",
    "**/dist/**",
    "**/build/**"
  ],
  "security_tools": {
    "pre_commit": {
      "enabled": true,
      "tool": "gitleaks",
      "version": ">=8.0.0"
    },
    "ci_cd": {
      "enabled": true,
      "tool": "gitleaks",
      "workflow": ".github/workflows/security.yml",
      "fail_on_secrets": true
    }
  }
}
